{% extends "base/base.twig" %}

{% block title %}
    Edit Operation Level {{ operatorLevel.name }}
{% endblock %}

{% block container %}
    <form class="form-signin" action="{{ path_for('update-operator-level', {'id' :operatorLevel._id}) }}" method="post">
        <h2 class="form-signin-heading"> Edit Operation Level  {{ operatorLevel.name }}</h2>
        <div class="form-group{{ errors.name ? ' has-error' : '' }} ">
            <label for="inputName" class="sr-only">Name</label>
            <input type="text" id="inputName" name="name" class="form-control" placeholder="Name" required autofocus
                   value="{{ old.name ? old.name : operatorLevel.name }}">
            {% for error in errors.name %}
                <span class="help-block">{{ error }}</span>
            {% endfor %}
        </div>
        <div class="form-group{{ errors.description ? ' has-error' : '' }} ">
            <label for="inputSurname" class="sr-only">Description</label>
            <input type="text" id="inputDescription" name="description" class="form-control" placeholder="Description" required
                   autofocus value="{{ old.description ? old.description : operatorLevel.description }}">
            {% for error in errors.description %}
                <span class="help-block">{{ error }}</span>
            {% endfor %}
        </div>
        <button class="btn btn-lg btn-primary btn-block" type="submit">Update</button>
        {{ csrf.field  | raw }}
    </form>
{% endblock %}
