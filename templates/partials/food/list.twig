{% extends "base/base.twig" %}

{% block title %}
    Manage Foods
{% endblock %}
{% block container %}
    <div class="jumbotron">
        <h1>Food</h1>
        <p>In this part you can edit, delete or add food</p>
    </div>

    <div class="panel panel-default">
        <div class="panel-heading">Food</div>
        <div class="panel-body">
            <a class="btn btn-primary" href="{{ path_for('enter-food-data') }}" role="button">Add a new food</a>
        </div>
        <table class="table">
            <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Quantity</th>
            </tr>
            </thead>
            <tbody>

            {% for food in foods %}
                <form action="{{ path_for('delete-food') }}" method="post" id="delete-user-{{ food._id }}" name="delete-user-{{ food._id }}">
                    <tr>
                        <th scope="row">{{ loop.index }}</th>
                        <td>{{ food.name }}</td>
                        <td>{{ food.quantity }}</td>
                        <td>
                            <div class="btn-toolbar" role="group" aria-label="...">
                                <a class="btn btn-default btn-primary" href="{{ path_for('edit-food',{'id': food._id}) }}"
                                   role="button">Edit</a>
                                <input type="submit" class="btn btn-default btn-danger" value="Delete">
                            </div>
                        </td>
                    </tr>
                    <input type="hidden" name="id" value="{{ food._id }}">
                    {{ csrf.field  | raw }}
                </form>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
